
public class pattern {
	public static void main(String[] args)
	{
		for(int i=0;i<4;i++)
		{int c=1;
			for(int j=0;j<=i;j++)
			{
			System.out.print(c);
			c++;
			}
			System.out.println();
			
			}
		for(int i=0;i<4;i++)
		{int c=1;
			for(int j=3;j>i;j--)
			{
			System.out.print(c);
						c++;
						}
			System.out.println();
			}
			
	}

}
